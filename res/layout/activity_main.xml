<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#f79604">

        <ImageView
            android:id="@+id/details_of_book_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="15dp"
            app:srcCompat="@drawable/booklogoorange" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/details_of_book_logo"
            android:text="Book categories"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="italic" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/main_library"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/shape_sport"
            android:drawableTop="@drawable/bookshelf"
            android:padding="15dp" />

        <TextView
            android:id="@+id/libraryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_library"
            android:layout_alignParentStart="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="5dp"
            android:text="Library"
            android:textColor="#0295c1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/main_Fav"
            android:layout_width="100dp"
            android:height="100dp"
            android:layout_marginTop="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:background="@drawable/shape_star"
            android:drawableTop="@drawable/star"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/FavText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_Fav"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="25dp"
            android:text="Favourites"
            android:textColor="#0295c1"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>